{
  "name": "beatrix",
  "version": "0.6.4",
  "module": "./src/index.ts",
  "type": "module",
  "scripts": {
    "build:all": "bun run build:vite && bun run build:server",
    "build:ci": "bun run lint && bun run build:all",
    "build:server": "bun run ./scripts/build-server.ts",
    "build:vite": "vite build",
    "dev": "concurrently \"bun dev:server\" \"bun dev:vite\"",
    "dev:debug": "concurrently \"DEBUG='b:*' bun dev:server\" \"bun dev:vite\"",
    "dev:eval-mode": "concurrently \"bun dev:server -e\" \"bun dev:vite\"",
    "dev:test-mode": "concurrently \"bun dev:server -t\" \"bun dev:vite\"",
    "dev:server": "mkdir -p ./notebook && bun run ./server/index.ts serve -n ./notebook",
    "dev:vite": "vite",
    "evals": "bun run ./server/index.ts evals",
    "f": "bun run fix",
    "fix": "biome check --fix --unsafe",
    "lint": "biome check && tsc",
    "mcp": "bun run ./server/index.ts mcp",
    "serve": "bun run ./server/index.ts serve",
    "start": "bun run ./server/index.ts",
    "start:debug": "DEBUG='*' bun run ./server/index.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/js": "^9.39.2",
    "@tailwindcss/vite": "^4.1.18",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bun": "^1.3.5",
    "@types/debug": "^4.1.12",
    "@types/mime-types": "^2.1.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "bun-types": "latest",
    "concurrently": "^9.2.1",
    "spawn-rx": "^5.1.2",
    "vite": "^6.4.1"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@anaisbetts/commands": "0.3.2",
    "@anthropic-ai/sdk": "^0.39.0",
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
