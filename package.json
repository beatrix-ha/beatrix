    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/glob": "^8.1.0",
    "@types/luxon": "^3.7.1",
    "autoprefixer": "^10.4.23",
    "axios": "^1.13.2",
    "bun-plugin-tailwind": "^0.0.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "colorette": "^2.0.20",
    "commander": "^13.1.0",
    "cron-parser": "^5.4.0",
    "debug": "^4.4.3",
    "dotenv": "^16.6.1",
    "glob": "^11.1.0",
    "home-assistant-js-websocket": "^9.6.0",
    "hono": "^4.11.3",
    "jimp": "^1.6.0",
    "kysely": "^0.28.9",
    "kysely-bun-worker": "^1.2.1",
    "lru-cache": "^11.2.4",
